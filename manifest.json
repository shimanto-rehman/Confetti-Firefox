{
  "manifest_version": 2,
  "name": "Confetti by Shimanto",
  "version": "1.0.0",
  "description": "Press ALT+Z anywhere to trigger confetti animation",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["confetti.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "confetti.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "confetti-shortcut@shimantorehman.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
